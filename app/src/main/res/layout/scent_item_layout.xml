<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <com.li.test.view.RippleView
        android:id="@+id/update_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:clickable="true"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/img_isSelected"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/paying_off_select"
            android:visibility="invisible"
            android:focusable="false"
            android:clickable="false" />

        <TextView
            android:id="@+id/tv_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_isSelected"
            android:paddingLeft="10dp"
            android:maxWidth="230dp"
            android:singleLine="true"
            style="@style/myTextStyleMain" />
        <TextView
            android:id="@+id/tv_default_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_main_title"
            android:paddingRight="7dp"
            android:gravity="right"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/img_arrow"
            style="@style/myTextStyleVice" />
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingRight="20dp"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/right_arrow" />
    </com.li.test.view.RippleView>
</RelativeLayout>
